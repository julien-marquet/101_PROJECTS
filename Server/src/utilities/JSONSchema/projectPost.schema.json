            "if": { "activePhase": { "enum": [2] }},
            "then": { "phase": { "$ref": "refs/project/phase2.schema.ref.json" }}
        },{
            "if": { "activePhase": { "enum": [3] }},
            "then": { "phase": { "$ref": "refs/project/phase3.schema.ref.json" }}
        },{
            "if": { "activePhase": { "enum": [4] }},
            "then": { "phase": { "$ref": "refs/project/phase4.schema.ref.json" }}
        }
    ],
    "required": [
        "activePhase"
    ],
    "additionalProperties": true
